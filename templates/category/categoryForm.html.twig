{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle catégorie{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bootstrap/css/base.css') }}">
    <link rel="stylesheet" href="{{ asset('bootstrap/css/categoryForm.css') }}">
    <link rel="stylesheet" href="{{ asset('bootstrap/css/styles.css') }}">
{% endblock %}
{% block body %}
    
    

    
    <div class="create-category-container">
        <h1>Créer une nouvelle catégorie</h1>

        {{ form_start(form, { 'attr': { 'class': 'needs-validation', 'novalidate': 'novalidate' } }) }}
            {{ form_widget(form, { 'attr': { 'class': 'form-control mb-3' } }) }}
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Publier</button>
            </div>
        {{ form_end(form) }}

        
        <div class="text-center mt-3">
            <a href="{{ path('app_categorys') }}" class="btn btn-secondary">Retour à la liste des catégories</a>
        </div>
    </div>

{% endblock %}
