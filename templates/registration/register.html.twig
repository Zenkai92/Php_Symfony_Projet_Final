{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="mb-4 text-center fw-normal">S'inscrire</h1>

                {% if form_errors(registrationForm) %}
                    <div class="alert alert-danger">
                        {{ form_errors(registrationForm) }}
                    </div>
                {% endif %}

                
                {{ form_start(registrationForm, { 'attr': { 'class': 'needs-validation', 'novalidate': 'novalidate' } }) }}

                    <!-- Champs pour le prÃ©nom-->
                    <div class="mb-3">
                        {{ form_label(registrationForm.firstName, null, { 'label_attr': { 'class': 'form-label' } }) }}
                        {{ form_widget(registrationForm.firstName, { 'attr': { 'class': 'form-control rounded' } }) }} 
                        {{ form_errors(registrationForm.firstName) }}
                    </div>

                    <!-- Champs pour le nom-->
                    <div class="mb-3">
                        {{ form_label(registrationForm.lastName, null, { 'label_attr': { 'class': 'form-label' } }) }}
                        {{ form_widget(registrationForm.lastName, { 'attr': { 'class': 'form-control rounded' } }) }} 
                        {{ form_errors(registrationForm.lastName) }}
                    </div>

                    <!-- Champs pour l'email-->
                    <div class="mb-3">
                        {{ form_label(registrationForm.email, null, { 'label_attr': { 'class': 'form-label' } }) }}
                        {{ form_widget(registrationForm.email, { 'attr': { 'class': 'form-control rounded' } }) }} 
                        {{ form_errors(registrationForm.email) }}
                    </div>

                    <!-- Champs pour le mot de passe -->
                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword, 'Password', { 'label_attr': { 'class': 'form-label' } }) }}
                        {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'form-control rounded' } }) }} 
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>

                    
                    <div class="form-check mb-3">
                        {{ form_widget(registrationForm.agreeTerms, { 'attr': { 'class': 'form-check-input rounded' } }) }} 
                        {{ form_label(registrationForm.agreeTerms, null, { 'label_attr': { 'class': 'form-check-label' } }) }}
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>

                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary fw-normal rounded fs-4">S'inscrire</button>
                    </div>

                
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
